	<s:Label x="421.5" y="50" text="Valor :" />
	<s:TextInput id="_valor" x="463" y="45" width="67" change="dataChange();" maxChars="4"
				 restrict="0-9 /." tabIndex="3" text="0.00" textAlign="center"/>
	<s:VGroup x="460" y="82">
		<s:RadioButton label="Resta ( Costo Actual - Valor Calculado )" click="dataChange();"
					   groupName="_tipo" selected="true" value="1"/>
		<s:RadioButton label="Suma ( Costo Actual + Valor Calculado )" click="dataChange();"
					   groupName="_tipo" value="0"/>
		<s:RadioButton label="No Aplica ( Costo Actual = Costo Actual )" click="dataChange();"
					   groupName="_tipo" value="2"/>
	</s:VGroup>
	<s:VGroup  x="460" y="164">
		<s:RadioButton label="Descuento  ( Costo Actual - Valor % )" click="dataChange();"
					   groupName="_tipoPorcentaje" selected="true" value="3"/>
		<s:RadioButton label="Multiplica  ( Costo Actual * Valor )" click="dataChange();"
					   groupName="_tipoPorcentaje" selected="true" value="1"/>
		<s:RadioButton label="Divide      ( Costo Actual / Valor )" click="dataChange();"
					   groupName="_tipoPorcentaje" value="2"/>
		<s:RadioButton label="Directo    ( Costo Actual +- Valor )" click="dataChange();"
					   groupName="_tipoPorcentaje" value="0"/>

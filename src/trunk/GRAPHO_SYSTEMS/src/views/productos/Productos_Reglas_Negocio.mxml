	<s:Label x="405.5" y="20" text="Nombre :" />
	<s:Label x="419.5" y="343" text="Tabla :" />
	<s:Label x="409.5" y="374" text="Campo :" />
	<s:Label x="419.5" y="403" text="Llave :" />
<s:TextInput id="_tabla" x="460" y="337" width="255" change="dataChange();" enabled="false"
			 tabIndex="1"/>
	<s:Label x="397.5" y="313" text="Var Asoc. :" />
	<s:TextInput id="_var" x="460" y="307" width="255" change="dataChange();" enabled="true"
				 tabIndex="1"/>
	<s:TextInput id="_campo" x="460" y="367" width="255" change="dataChange();" enabled="false"
				 tabIndex="1"/>
	<s:TextInput id="_llave" x="460" y="397" width="255" change="dataChange();" enabled="false"
				 tabIndex="1"/>
	<s:TextInput x="463" y="15" id="_nombre" change="dataChange();" width="252" tabIndex="1"/>

	<s:DataGrid height="447" dataProvider="{_DataResult}" id="_dataList" selectionChange="onDataSelect();" selectionMode="singleRow" enabled="{_dataReady&amp;&amp;!_newData&amp;&amp;!_updateData}" width="368" x="12" y="45">
		<s:columns>	
			<s:ArrayList>
				<s:GridColumn headerText="Id" dataField="_idReglaNegocio" width="40"> </s:GridColumn>	
				<s:GridColumn headerText="Nombre" dataField="_nombre"> </s:GridColumn>
